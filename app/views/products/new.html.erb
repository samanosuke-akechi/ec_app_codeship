<div class="form mb-5">
  <h2>商品の登録</h2>
  <div class="p-5 product-form">
    <%= form_with model: @product, local: true do |f| %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div>
        <%= f.label :description %>
        <%= f.text_area :description, class:"form-control" %>
      </div>
      <div>
        <%= f.label :price %>
        <%= f.text_field :price, class:"form-control" %>
      </div>
      <div class="mt-3 row">
        <%= f.submit "登録する" %>
      </div>
    <% end %>
  </div>
</div>